<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.etbr3.mhmdlogan.etbr3.MainActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_marginTop="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo1"
        android:layout_centerHorizontal="true" />
    <ScrollView
        android:layout_below="@id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMain"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="30dp"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimary"
                android:text="Enter To Our Page"
                android:layout_below="@+id/img"
                />
            <LinearLayout
                android:id="@+id/LL"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/btnMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginRight="15dp"
                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/squar"
                    android:layout_marginTop="18dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Name" />

                    <EditText
                        android:id="@+id/edtNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Number"
                        android:layout_below="@+id/edtName"
                        android:layout_marginTop="12dp" />
                    <Button
                        android:id="@+id/btnChoose"
                        android:text="    Choose image    "
                        android:background="#d3d3d3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_marginTop="5dp"
                        android:id="@+id/btnAdd"
                        android:text="    Add To your List    "
                        android:textColor="@color/colorAccent"
                        android:background="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnList"
                android:text="Enter To Your Page"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/colorPrimary"
                android:background="#e9e9e9"
                android:layout_marginTop="18dp"
                android:layout_below="@id/LL"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DevBy: Mohamed Elhossiny"
                    android:layout_marginBottom="20dp"/>
            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
